<style>
.user {
  text-align: right;
}
.user-email {
  text-align: left;
}
.column {
  box-sizing: border-box;
  float: left;
  width: 25%;
  padding: 0 10px;

}



</style>

<h1 class="user-email"> <%=current_user.email%>'s Gallery  </h1>

<% if logged_in?  %>
  <h4 class="user">Logged in user:  <%= current_user.email %></h4>
<% end %>
<% @collections.each do |c|  %> 
<div class="column"><a href="/collections/<%=c.id%>">"<%=c.title %>" by: <%=c.artist %></a></div>
<% end %>